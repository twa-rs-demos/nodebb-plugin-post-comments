{
  "id": "nodebb-plugin-post-comments",
  "library": "./library.js",
  "hooks": [
    { "hook": "filter:scripts.get", "method": "addScripts" },
    { "hook": "static:app.load", "method": "init" },
    { "hook": "filter:post.getPosts", "method": "showPosts" }
  ],
  "staticDirs": {
    "lib": "public/lib"
  },
  "scripts":[
    "./public/lib/main.js",
    "./public/db/db-posts.js"
  ],
  "less":[
    "./public/less/getPost.less"
  ]
}